# FitFusion AI Workout App - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Direct Database URL (optional, for connection pooling)
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# AI SERVICE CONFIGURATION  
# =============================================================================

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL_TYPE=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192
GEMINI_SAFETY=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
APP_VERSION=1.0.0

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# MIDDLEWARE CONFIGURATION
# =============================================================================

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fitfusion.log
STRUCTURED_LOGGING=false
LOG_REQUEST_BODY=false
LOG_REQUEST_HEADERS=false
DATABASE_LOGGING=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# PWA & NOTIFICATIONS
# =============================================================================

# VAPID Keys for Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development flags
DEBUG=true
RELOAD=true
LOG_REQUESTS=true

# Test Database (optional)
TEST_DATABASE_URL=postgresql://user:password@host:port/test_database
